!!!
%html
  %head
    %title Isotope Contacts
    = stylesheet_link_tag    "isotope_contacts/application"
    = javascript_include_tag "isotope_contacts/application"
    = csrf_meta_tags
  %body
    %div.topbar
      %div.topbar-inner
        %div.container-fluid
          = link_to 'Contacts', contacts_path, class: 'brand'
          %ul.nav
            %li= link_to 'New Contact', new_contact_path
          = form_for @search, :url => contacts_path, :html => { method: :get, class: 'pull-right'} do |f|
            = f.text_field :first_name_or_last_name_contains
            = button_tag 'Search', class: 'btn'
    %div.container-fluid
      = yield
    = yield :javascripts
